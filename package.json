{
    "name": "code-gloss",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "format": "prettier --write --ignore-path .gitignore .",
        "start": "next start",
        "start-database": "docker compose up --force-recreate --renew-anon-volumes postgresql",
        "init-database": "npx knex migrate:latest && knex seed:run",
        "lint": "next lint",
        "lint:fix": "eslint --fix --cache .",
        "test": "vitest --exclude \"*/integration-tests\"",
        "test:integration": "npx playwright test",
        "test:coverage": "vitest --coverage",
        "type-check": "npx tsc --build "
    },
    "lint-staged": {
        "*.{ts, tsx}": [
            "npm run format",
            "npm run lint:fix"
        ],
        "*.{json,html,yml}": [
            "npm run format"
        ]
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.3",
        "knex": "^3.1.0",
        "next": "15.3.1",
        "pg": "^8.14.1",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@eslint/js": "^9.24.0",
        "@playwright/test": "^1.51.1",
        "@testing-library/jest-dom": "^6.6.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^3.1.1",
        "autoprefixer": "^10.4.21",
        "better-sqlite3": "^11.9.1",
        "eslint": "^9.24.0",
        "eslint-config-next": "15.3.1",
        "eslint-config-prettier": "^10.1.1",
        "husky": "^9.1.7",
        "jsdom": "^26.0.0",
        "lint-staged": "^15.5.0",
        "mysql": "^2.18.1",
        "mysql2": "^3.14.0",
        "oracledb": "^6.8.0",
        "pg-query-stream": "^4.8.1",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "sqlite3": "^5.1.7",
        "tailwindcss": "^4.1.3",
        "tedious": "^18.6.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.29.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.2"
    }
}
