{
    "name": "code-gloss",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "format": "prettier --write --ignore-path .gitignore .",
        "start": "next start",
        "start:database": "docker compose up --wait --detach",
        "create:database": "docker exec postgresql psql --dbname \"host=localhost port=5432 user=username password=password123 dbname=postgres\" --file=/tmp/scripts/create_gloses_table.sql",
        "seed:database:pg": "docker exec postgresql psql --dbname \"host=localhost port=5432 user=username password=password123 dbname=postgres\" --file=/tmp/scripts/gloses_seeds.sql",
        "seed:database:ts": "npx ts-node infra/database/scripts/create_gloses_and_seeds.ts",
        "lint": "next lint",
        "lint:fix": "eslint --fix --cache .",
        "test": "vitest --exclude \"*/integration-tests\"",
        "test:integration": "npx playwright test",
        "test:coverage": "vitest --coverage",
        "type-check": "npx tsc --build "
    },
    "lint-staged": {
        "*.{ts, tsx}": [
            "npm run format",
            "npm run lint:fix"
        ],
        "*.{json,html,yml}": [
            "npm run format"
        ]
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.16",
        "@types/pg": "^8.15.5",
        "dotenv": "^17.2.3",
        "next": "16.0.0",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@eslint/js": "^9.38.0",
        "@playwright/test": "^1.56.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.9.1",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^5.1.0",
        "@vitest/coverage-v8": "^4.0.2",
        "autoprefixer": "^10.4.21",
        "better-sqlite3": "^12.4.1",
        "eslint": "^9.38.0",
        "eslint-config-next": "16.0.0",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "jsdom": "^27.0.1",
        "lint-staged": "^16.2.6",
        "mysql": "^2.18.1",
        "mysql2": "^3.15.3",
        "oracledb": "^6.10.0",
        "pg-query-stream": "^4.10.3",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "sqlite3": "^5.1.7",
        "tailwindcss": "^4.1.3",
        "tedious": "^18.6.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.35.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.2"
    }
}
